<% i = 0 %>
<table cellpadding='5px'>
<% friends_list.each do |f| %>
  <% if i == 0%>
    <tr>
  <% end %>
  <td width='100px'> <%= check_box_tag '', f.id, false, :profile_id => f.profile.id, :login => f.login %> <%= f.login %> </td>
  <% i = i + 1 %>
  <% if i == 3 %>
    </tr>
    <% i = 0 %>
  <% end %>
<% end %>
</table>
