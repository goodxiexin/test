<div class='header'>
<h3>更改状态</h3>
</div>

<% form_remote_for :participation, :url => event_participation_url(@event, @participation, :show => 0), :html => {:method => :put} do |f| %>
<div class='content'>
  <%= f.radio_button 'status', 3 %><%= label_tag '', '肯定去' %><br/>
  <%= f.radio_button 'status', 4 %><%= label_tag '', '可能去' %><br/>
  <%= f.radio_button 'status', 5 %><%= label_tag '', '去他娘的' %><br/>
</div>
<div class='footer'>
  <%= f.submit '确定', :class => 'confirm-button' %>
  <%= button_to_function '取消', "facebox.close();", :class => 'cancel-button' %>
</div>
<% end %>
