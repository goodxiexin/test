<div class='header'>
<h3>回复这个邀请</h3>
</div>

<div class='content'>
  <%= radio_button :invitation, :status, 1, :onclick => "new Ajax.Request('#{event_invitation_url(@event, @invitation, 'invitation[status]' => 3, :show => 0, :authenticity_token => form_authenticity_token )}', {method: 'put'});" %><%= label_tag '', '肯定去' %><br/>
  <%= radio_button :invitation, :status, 2, :onclick => "new Ajax.Request('#{event_invitation_url(@event, @invitation, 'invitation[status]' => 4, :show => 0, :authenticity_token => form_authenticity_token)}', {method: 'put'});" %><%= label_tag '', '可能去' %><br/>
  <%= radio_button :invitation, :status, 3, :onclick => "if(confirm('are you sure?')){new Ajax.Request('#{event_invitation_url(@event, @invitation, 'invitation[status]' => 5, :show => 0, :authenticity_token => form_authenticity_token)}', {method: 'put'});}" %><%= label_tag '', '不鸟他' %><br/>
</div>

