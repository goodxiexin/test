<% guild = guild_invitation.guild %>

<div class='friend' id='guild_invitation_<%= guild_invitation.id %>'>
  <div>
    <%= profile_link guild.president %>邀请你参加工会<%= guild_link guild %>
  </div>
	<div class='operation' id='guild_invitation_option_<%= guild_invitation.id %>'>
	  <%= radio_button :invitation, :status, 1, :onclick => "new Ajax.Request('#{accept_guild_invitation_url(guild, guild_invitation, :show => 2, :authenticity_token => form_authenticity_token )}', {method: 'put'});" %><%= label_tag '', '接受' %><br/>
		<%= radio_button :invitation, :status, 2, :onclick => "new Ajax.Request('#{decline_guild_invitation_url(guild, guild_invitation, :show => 2, :authenticity_token => form_authenticity_token)}', {method: 'delete'});" %><%= label_tag '', '拒绝' %><br/>
	</div>
</div>
