<% region = @profile.region %>
<% city = @profile.city %>
<% form_for :profile, :html => {:id => 'basic_info_form'} do |f| %>
  <%= f.label '性别' %> <%= gender_select_tag @profile %><br/>
  <%= f.label '生日' %> <%= calendar_date_select :profile, :birthday %><br/>
  <%= f.label '省份' %> <%= collection_select @profile, :region, Region.all, :id, :name, {:prompt => '---'} %><br/>
  <%= f.label '城市' %> <%= collection_select @profile, :city, region.nil? ? [] : region.cities, :id, :name, {:prompt => '---'}%><br/>
  <%= f.label '地区' %> <%= collection_select @profile, :district, city.nil? ? [] : city.districts, :id, :name, {:prompt => '---'}%><br/>
	<%= button_to_function '保存', "profile_manager.update_basic_info();" %>
  <%= link_to_function "取消", "profile_manager.leave_edit_basic_info();" %>
<% end %>
