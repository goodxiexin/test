<% request = friend_request %>
<div id='friend_request_<%= request.id %>'>
	<%= avatar request.user %>
	<div>
		<%= profile_link request.user %>
	</div>
	<div>
		<%= request.data %>
	</div>
	<div id='friend_request_option_<%= request.id %>'>
		<%= link_to_remote '接受', :url => accept_friend_request_url(request), :method => :put %> |
		<%= facebox_confirm '拒绝', decline_friend_request_url(request), {:msg => '你确定要拒绝吗?', :method => :delete} %>
	</div>
</div>
