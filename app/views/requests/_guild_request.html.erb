<% request = guild_request %>
<div class='friend' id='guild_request_<%= request.id%>'>
  <%= avatar request.user %>
  <div class='user-link'>
    <%= profile_link request.user %><br/>
  </div><br/>
  <div>
    请求加入工会<%= guild_link request.guild %> 
  </div>
  <div class='operation' id='guild_request_option_<%= request.id %>'>
    <%= link_to_remote '接受', :url => accept_guild_request_url(request.guild, request, :show => 2), :method => :put  %> |
    <%= facebox_confirm '拒绝', decline_guild_request_url(request.guild, request, :show => 2), {:msg => '你确定要决绝这个人加入的请求吗?', :method => :delete} %>
  </div>
</div>
