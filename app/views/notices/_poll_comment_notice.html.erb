<% poll = comment.commentable %>
<% link = "#{link_to_function poll.name, "home_manager.read_notice('#{read_notice_url(notice)}', '#{form_authenticity_token}'); window.open('/polls/#{poll.id}?reply_to=#{comment.poster_id}');"}" %>
<li>
	<div class="feed-message">
		<%= link_to_function '', "home_manager.read_notice('#{read_notice_url(notice)}', '#{form_authenticity_token}')", :class => 'icon-active' %>
		<% if notice.data == 'comment' %>
			<%= profile_link comment.poster %> 评论了你的投票 <%= link %>
		<% elsif notice.data == 'reply' %>
			<%= profile_link comment.poster %> 在投票 <%= link %> 回复了你
		<% end %> 		
	</div>
</li>
