<% video = comment.commentable %>
<% link = "#{link_to_function video.title, "home_manager.read_notice('#{read_notice_url(notice)}', '#{form_authenticity_token}'); window.open('/videos/#{video.id}?reply_to=#{comment.poster_id}');"}" %>
<li>
	<div class="feed-message">
		<%= link_to_function '', "home_manager.read_notice('#{read_notice_url(notice)}', '#{form_authenticity_token}')", :class => 'icon-active' %>
		<% if notice.data == 'comment' %>
			<%= profile_link comment.poster %> 评论了你的视频 <%= link %>
		<% elsif notice.data == 'reply' %>
			<%= profile_link comment.poster %> 在 <%= link %> 回复了你
		<% elsif notice.data == 'tag' %>
			<%= profile_link comment.poster %> 评论了和你有关的视频 <%= link %>
		<% end %> 		
	</div>
</li>
