<% event = comment.commentable %>
<% link = "#{link_to_function event.title, "home_manager.read_notice('#{read_notice_url(notice)}', '#{form_authenticity_token}'); window.open('/events/#{event.id}?reply_to=#{comment.poster_id}');"}" %>
<li>
	<div class="feed-message">
		<%= link_to_function '', "home_manager.read_notice('#{read_notice_url(notice)}', '#{form_authenticity_token}')", :class => 'icon-active' %>
		<% if notice.data == 'comment' %>
			<%= profile_link comment.poster %> 在活动 <%= link %> 上留言了
		<% elsif notice.data == 'reply' %>
			<%= profile_link comment.poster %> 在活动 <%= link %> 中回复了你
		<% end %> 		
	</div>
</li>
