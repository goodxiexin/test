<% status = comment.commentable %>
<% if status.poster.statuses_count % 10 == 0 %>
	<% page = (status.poster.statuses_count / 10) + 1%>
<% else %>
	<% page = (status.poster.statuses_count / 10) %>
<% end %>
<% link = "#{link_to_function truncate(status.content, :length => 20, :omission => '...'), "home_manager.read_notice('#{read_notice_url(notice)}', '#{form_authenticity_token}'); window.open('/statuses?id=#{status.poster_id}&page=#{page}&status_id=#{status.id}&reply_to=#{comment.poster_id}');"}" %>
<li>
	<div class="feed-message">
		<%= link_to_function '', "home_manager.read_notice('#{read_notice_url(notice)}', '#{form_authenticity_token}')", :class => 'icon-active' %>
		<% if notice.data == 'comment' %>
			<%= profile_link comment.poster %> 评论了你的状态 <%= link %>
		<% elsif notice.data == 'reply' %>
			<%= profile_link comment.poster %> 在状态 <%= link %> 回复了你
		<% end %> 		
	</div>
</li>
