<html>
<head>
  <%= stylesheet_link_tag "root" %>
  <%= stylesheet_link_tag 'facebox' %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'register' %>
</head>
<body>
  <div id="container">
　　<div id="header">
			<div id='menu'>
				<%= link_to 'register', signup_url %> |
				<%= link_to 'login', login_url %> |
				<%= link_to_function "bookmark", "bookmark()" %> |
				<%= link_to_function "homepage", "homepage()" %> |
				<%= link_to 'help'%>
			</div>
　　</div>
    <div id='containter'>
　　  <div id="left">
        <% if flash[:notice] %>
          <div id='notice'><%= flash[:notice] %></div>
        <% end -%>
        <% if flash[:error] %>
          <div id='error'><%= flash[:error] %></div>
        <% end -%>
      </div>
　    <div id="middle">
<% form_for :user, :html => {:id => 'register_form'} do |f| -%>
<p>
  <label>Login</label><br/>
  <%= f.text_field :login, :onblur => "register_manager.validate_login()", :onfocus => "register_manager.show_login_requirement();" %>
  <a id='login_info'></a>
</p>

<p>
  <label>Email</label><br/>
  <%= f.text_field :email, :onblur => "register_manager.validate_email()", :onfocus => "register_manager.show_email_requirement();" %>
  <a id='email_info'></a>
</p>

<p>
  <%= f.radio_button 'gender', 'male' %> male
  <%= f.radio_button 'gender', 'female' %> female
</p>

<p>
  <label for="password">Password</label><br/>
  <%= f.password_field :password, :onblur => "register_manager.validate_password()", :onfocus => "register_manager.show_password_requirement();"%>
  <a id='password_info'></a>
</p>

<p>
  <label for="password_confirmation">Confirm Password</label><br/>
  <%= f.password_field :password_confirmation, :onblur => "register_manager.validate_password_confirmation()", :onclick => "register_manager.show_password_confirm_requirement()" %>
  <a id='password_confirmation_info'></a>
</p>

<p> Game Characters: </p>
<h4>游戏信息, 你必须添加你玩过的游戏角色（至少一个）以完成注册</h4>
<div id='character_info'>
<%= link_to_function '添加游戏角色', "register_manager.new_character();" %>
  <ul id='characters'>
  </ul>
</div>
<% end -%>

<%= link_to_function '注册', "register_manager.submit()" %>

<%= javascript_tag "
  var register_manager = new RegisterManager();
"%>

		  </div>
    </div>
　　<div id="footer">
      Dayday3 Group: xiahong gao, xin xie
　　</div>
</div>
</body>
