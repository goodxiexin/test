<div class='header'>
  <h3>选择动作</h3>
</div>

<% form_remote_for :delivery, :url => pokes_url do |f| %>
  <div class='content'>
  <%= hidden_field_tag 'delivery[recipient_id]', @recipient.id %>
	<% @pokes.each do |p| %>
		<li><%= radio_button_tag 'delivery[poke_id]', p.id %><%= image_tag p.path %><%=p.name %></li>
  <% end %>
  <div class='footer'>
    <%= f.submit '发送', :class => 'confirm-button' %>
    <%= button_to_function '取消', "facebox.close()", :class => 'cancel-button' %>
  </div>
<% end %>
