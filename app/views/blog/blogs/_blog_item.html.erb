<dd id='blog_<%= blog_item.id %>'>
  <span class='title'><%= blog_link blog_item %></span>
  <span class='option'>
    <%= ftime blog_item.created_at %>
    <% if blog_item.poster == current_user %>
	    <%= link_to "编辑", edit_blog_url(blog_item) %>
	    <%= facebox_confirm 'x', blog_url(blog_item), {:msg => "你确定要删除这篇博客吗?", :method => :delete} %>
    <% end %>
  </span>
</dd> 
