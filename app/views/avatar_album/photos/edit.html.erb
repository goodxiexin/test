<div class='header'>
  <h3>编辑照片</h3>
</div>

<% form_remote_for :photo, :url => avatar_url(@photo), :method => :put do |f| %>
  <div class='content'>
    <%= image_tag @photo.public_filename(:small) %><br/>
    <%= f.label '照片描述' %>
    <%= f.text_area 'notation', :rows => 4, :cols => 40 %><br/>
    <%= f.label '所属专辑' %>
    <%= collection_select :photo, :album_id, [@album], :id, :title %><br/>
  </div>
  <div class='footer'>
    <%= f.submit '确定', :class => 'confirm-button' %>
    <%= button_to_function '取消', "facebox.close();", :class => 'cancel-button' %>
  </div>
<% end %>

