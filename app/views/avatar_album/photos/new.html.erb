<div class='header'> 
<h3>更改头像</h3>
</div>

<% form_for :photo, :url => avatars_url(:album => params[:album]), :html => {:multipart => true, :target => 'upload_frame'} do |f| %>
  <div class='content'>
  <%= f.label 'support jpg, gif, png maxium size is 4MB' %><br/>
  <%= f.file_field 'uploaded_data', :size => 20 %><br/>
  </div>
  <div class='footer'>
  <%= f.submit '上传', :class => 'confirm-button' %>
  <%= button_to_function '取消', "facebox.close();", :class => 'cancel-button' %>
  </div>
<% end %>

<iframe id='upload_frame' name='upload_frame' style='width:1px;height:1px;border:0px' src="about:blank"></iframe>

