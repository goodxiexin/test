<div class='header'>
  <h3>修改截至时间</h3>
</div>

<% form_remote_for :poll, :url => poll_url(@poll), :html => {:method => :put} do |f| %>
<div class='content'>
  <%= f.label '截至时间' %>
  <%= calendar_date_select :poll, :end_date %>
</div>
<div class='footer'>
  <%= f.submit '修改', :class => 'confirm-button' %>
  <%= button_to_function '取消', "facebox.close();", :class => 'cancel-button' %>
</div>
<% end %>
