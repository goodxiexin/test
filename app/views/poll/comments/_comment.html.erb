<div class="box04 word-box" id='comment_<%= comment.id %>'>
	<div class="img"><%= avatar comment.poster, :size => :small %></div>
  <div class="word">
    <p><%= profile_link comment.poster %> <span><%= ftime comment.created_at %> -</span> <%= link_to_function '回复', "show_comment_form('poll', #{comment.commentable.id}, '#{comment.poster.login}')" %></p>
    <p><%= comment.content %></p>
  </div>
  <% if @user == current_user || comment.poster == current_user %>
		<%= link_to_remote 'x', :url => poll_comment_url(comment.commentable, comment), :method => :delete, :class => "icon-active" %>
	<% end %>
</div>
