<div class="box04 word-box" id='comment_<%= comment.id %>'>
	<div class="img"><%= avatar comment.poster, :size => :small %></div>
  <div class="word">
    <p><%= profile_link comment.poster %> <span><%= ftime comment.created_at %> -</span> <%= link_to_function '回复', "show_comment_form('personal_album', #{comment.commentable_id}, '#{comment.poster.login}'); " %></p>
    <p><%= comment.content %></p>
  </div>
	<div class='option'>
    <% if @user == current_user || comment.poster == current_user %>
			<%= link_to_remote 'x', :url => personal_album_comment_url(comment.commentable, comment), :method => :delete %>
		<% end %>
  </div>
</div>
