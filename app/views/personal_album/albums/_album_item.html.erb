<div class="picitem">
	<div class="picbox01">
		<a class="btn" href="#"></a>
		<div class="picwrap">
			<table cellpadding="0">
				<tr><td><%= album_cover album_item, :class => 'imgbox01' %></td></tr>
			</table>
		</div>
  </div>
  <p><b><%= album_link album_item %></b></p>
  <p>共<span><%= album_item.photos_count %></span>张</p>
  <p>
		<% if album_item.poster == current_user and album_item.type != 'AvatarAlbum'%>
			<%= link_to "编辑", edit_personal_album_url(album_item), :rel => 'facebox' %> | 
			<%= link_to '删除', confirm_destroy_personal_album_url(album_item), :rel => 'facebox' %>
		<% end %>
	</p>
</div>
